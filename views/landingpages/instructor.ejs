<%- include('../partials/header') %>


  <div class="container" style="padding-left: 750px">
    <div class="btn-group">
      <a href="/instructor/join">
        <button type="button" class="btn btn-outline-secondary" style="margin-right: 20px;" >Join a course</button>
        </a>
      <a href="/instructor/create">
        <button type="button" class="btn btn-outline-secondary" style="margin-right: 20px;" >Create a course</button>
        </a>
      <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="margin-right: 20px">
          Instructor
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="/student">Student</a>
            <a class="dropdown-item" href="/instructor">Instructor</a>
        </div>
      </div>
      <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%=_doc.name%>
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <a class="dropdown-item" href=/student/profile>Profile</a>
          <a class="dropdown-item" href="/logout">Logout</a>
        </div>
      </div>
    </div>
  </div>
  <br>
  <div style="padding-left:400px">
  <% courses.forEach(course=>{ %>

    <div class="card" style="width: 50rem;">
      <!-- <img src="..." class="card-img-top" alt="..."> -->
      <div class="card-body">
        <h5 class="card-title"><%=course.name%></h5>
        <p class="card-text"><%=course.courseCode%>-<%=course.sem%></p>
    
        <a href=/instructor/courses/<%=course.name%> class="btn btn-primary stretched-link">View</a>
      </div>
    </div>
  <% }) %>
</div>




<%- include('../partials/footer') %>